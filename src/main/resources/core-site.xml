<!-- Put site-specific property overrides in this file. -->

<configuration>

    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://centos2:9000</value>
    </property>

    <!-- journalnode的edtis日志文件存储在本地文件系统的位置 -->

    <property>
        <name>dfs.journalnode.edits.dir</name>
        <value>/home/apps/hadoop/qjournaldata</value>
    </property>

    <!-- 配置自动故障转移时请求zk的路径  -->

    <property>
        <name>ha.zookeeper.quorum</name>
        <value>centos3:2181,centos4:2181,centos5:2181</value>
    </property>

    <property>
	<name>hadoop.tmp.dir</name>
	<value>/home/apps/hadoop/hdpdata</value>
    </property>

    <property>
	<name>io.file.buffer.size</name>
	<value>4096</value>
    </property>

</configuration>
